// Button-Extends


// Standard Button-Placeholder
%btn {
	display: inline-block;
	position: relative;
	font-family: $base-font;
	text-align: center;
	text-decoration: none;<% if (config.get('nikitaCssMixins').indexOf('font-smoothing') != -1) { %>
	@include font-smoothing(on);<%}%>
	cursor: pointer;
	transition: all $base-animation-duration ease-out;
}

%btn:focus,
%btn:hover {
	outline: none; // don't forget to define an alternative styling! 
}

%btn[disabled] {
	cursor: not-allowed;
}

<% if (config.get('formFramework'))
{
%>// Form-Button
%btn-form {
	border: 1px solid $brand-green;
	padding: 5px 20px;
	font-size: $base-fontsize;
	line-height: $base-lineheight;
	text-transform: uppercase;
	color: $text-color;
	background-color: $white;
	
	.no-touch &:focus,
	.no-touch &:hover,
	.no-touch &:active {
		border: 1px solid $text-color;
		color: $text-color;
	}
}
<%
}
%>
