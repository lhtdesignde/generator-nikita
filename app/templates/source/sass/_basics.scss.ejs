/**
 * ---------------------------------------------------------------------------------------------------- #
 *
 * Basic Formattings
 *
 */

html {
	box-sizing: border-box;
}

*,
*:before,
*:after {
	box-sizing: inherit;
}

/**
 * body
 */

body {
	font-family: $base-font;
	font-size: $base-fontsize;
	font-weight: 400;
	line-height: $base-lineheight;
	text-align: left;
	color: $text-color;
	background-color: $white;
	text-rendering: optimizeLegibility;
}

/**
 * General text renderings
 *
 */

b,
strong {
	font-weight: 700;
}

i,
em,
dfn {
	font-style: italic;
}

address {
	font-style: normal;
}

/**
 * Textselection
 */

::-moz-selection {
	text-shadow: none;
	color: $white;
	background-color: rgba($brand-green, 0.99); // rgba to adjust Chrome-Firefox differences
}

::selection {
	text-shadow: none;
	color: #fff;
	background-color: rgba($brand-green, 0.99); // rgba to adjust Chrome-Firefox differences
}

/**
 *
 * Hyperlinks
 *
 */

a,
a:visited {
	text-decoration: none;
}

a:hover,
a:active,
a:focus {
	outline: 0 none;
	text-decoration: underline;
}

/**
 * Standards & Helpers
 */

<% if (config.get('nikitaCssMixins').indexOf('clearfix') != -1) { %>
.clearfix {
    @include clearfix;
}<%}%>
<% if (config.get('nikitaCssMixins').indexOf('visuallyhidden') != -1) { %>
.visuallyhidden {
    @include visuallyhidden;
}
<%}%>

/**
 * Buttons
 */

button {
	overflow: visible;
	-webkit-appearance: none;
	-moz-appearance: none;
	display: inline-block;
	margin: 0;
	border: 0 none;
	padding: 0;
	font-family: $base-font;
	text-transform: none;
	background-color: transparent;
}